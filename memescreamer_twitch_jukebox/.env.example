# Twitch Bot (chat commands)
TWITCH_BOT_TOKEN=oauth:xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWITCH_BOT_NICK=my_queue_bot
TWITCH_CHANNELS=mychannel

# Twitch Stream Output
TWITCH_STREAM_KEY=live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Moderation
CONTENT_FILTER_SCRIPT=/app/content_filter.sh
MAX_DURATION_SECONDS=600
MAX_FILE_SIZE_MB=500

# Paths
MEDIA_DIR=/app/media
DATABASE_PATH=/app/data/queue.db

# Stream Settings
STREAM_BITRATE_VIDEO=3000k
STREAM_BITRATE_AUDIO=128k
STREAM_PRESET=veryfast
IDLE_IMAGE=/app/assets/idle.png
